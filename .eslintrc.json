{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType"  : "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "single", {"avoidEscape": true}],
        "semi": ["error", "always"],
        "semi-spacing": ["error", {"before": false, "after": false}],
        "semi-style": ["error", "last"],
        "react/jsx-uses-react": "error",   
        "react/jsx-uses-vars": "error",
        "linebreak-style": ["error", "windows"]
    }
}